@model IEnumerable<EF_practice.Models.Ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdeventNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdeventNavigation.Idevent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idticket">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idticket">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idticket">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
